<!DOCTYPE html>

<html>

<head>
	<title>A Random FNORD <%=@title%></title>
	<%= csrf_meta_tag %>
	<%= stylesheet_link_tag 'main', :media => 'all' %>
</head>

<body>

<div id="wrapper_outer">
<div id="wrapper_inner">

	<div class="header"><header><%= render 'layouts/header' %></header></div>
	
	<div class="nav"><nav><%= render 'layouts/navigation' %></nav></div>
	
	<div id="main_content">
		
		<div id="left_content">
			
			<% if !flash.empty? %>
			<div class="flash_box">
				<% flash.each do |key, value| %>
					<div class="flash <%= key %>"><%= value %></div>
				<% end %>
			</div>	
			<% end %>
		
			<%= yield %>
		</div>
		
		<div id="sidebar">
			<%= render 'layouts/sidebar' %>
		</div>
		<p style="clear: both; height: 0;" /> <!-- hack to get the two floated columns same height and background -->
	</div>

	<div class="footer"><footer><%= render 'layouts/footer' %></footer></div>
	
</div>
</div>
<%= debug(params) if Rails.env.development? %>	
</body>

</html>
