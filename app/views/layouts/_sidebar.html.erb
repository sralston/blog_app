<% if signed_in? %>

	<%= render 'shared/sidebar/logged_in' %>
	
<% else %>

	<%= render 'shared/sidebar/log_in_sign_up' %>
	
<% end %>

<% if signed_in? && (current_user.access_level == "ADMIN" || current_user.access_level == "POST") %>

	<%= render 'shared/sidebar/sidebar_tools' %>
	
<% else %>

	<%= render 'shared/sidebar/sidebar_for_users' %>
	
<% end %>
